<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
        >
    <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/widthImageLinearLayout"
            android:layout_height="@dimen/heightImageLinearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorWhite"
        />
    <TextView
            android:id="@+id/tvTitleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imageView"
            android:layout_marginLeft="@dimen/leftTextLinearLayout"
            android:layout_marginStart="@dimen/startTextLinearLayout"
            android:layout_toRightOf="@id/imageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:text="TextView"
            android:textSize="@dimen/textSizeLinearLayout"
            android:layout_marginTop="@dimen/marginTopLinearLayout"
            android:textColor="@color/colorWhite"
        />
    <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_alignBottom="@id/imageView"
            android:layout_alignLeft="@id/tvTitleName"
            android:layout_alignStart="@id/tvTitleName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSizeLinearLayout"
            android:layout_marginBottom="@dimen/marginTopLinearLayout"
        />
    </RelativeLayout>


