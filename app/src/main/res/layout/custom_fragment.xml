<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <!--hien thi anh Viet Nam va text-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView android:id="@+id/imgView1"
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:src="@drawable/vietnam"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hà Nội, Việt Nam"
            android:layout_gravity="center"
            android:textSize="20sp"
            />
    </LinearLayout>
    <!--ket thuc -->
    <!--hien thi 2 annh -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/hotel"
            android:layout_marginBottom="@dimen/imagebottom"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/atm_machine"
            android:layout_marginBottom="@dimen/imagebottom"
            />
    </LinearLayout>
    <!--hien thi 2 dong text-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"

        >
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Khách Sạn"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="40dp"
            />
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ATM"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="40dp"
            />
    </LinearLayout>
    <!--dong 2 hien thi 2 cai anh tiep theo-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="350dp"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/hospital"
            android:layout_marginBottom="@dimen/imagebottom"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/metro"
            android:layout_marginBottom="@dimen/imagebottom"
            />
    </LinearLayout>
    <!--hien thi 2 dong text-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="350dp"
        >
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bệnh Viện"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="40dp"
            />
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xe Bus"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="40dp"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>

